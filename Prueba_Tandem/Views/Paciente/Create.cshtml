@model Prueba_Tandem.Models.MPaciente.Paciente
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> items = (List<SelectListItem>)ViewBag.items;
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear Paciente Nuevo</h3>
            <form method="post" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Identificación</label>
                    <input asp-for="Identificacion" class="form-control" />
                    <span asp-validation-for="Identificacion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Edad</label>
                    <input asp-for="Edad" class="form-control" />
                    <span asp-validation-for="Edad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Sexo</label>
                    <select class="form-control" asp-for="Sexo">
                        <option value="false">Masculino</option>
                        <option value="true">Femenino</option>
                    </select>
                    <span asp-validation-for="Sexo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Triage</label>
                    <select class="form-control" asp-for="Triage" asp-items="items"></select>
                    <span asp-validation-for="Triage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Sintomas</label>
                    <input asp-for="Sintomas" class="form-control" />
                    <span asp-validation-for="Sintomas" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Crear Paciente" />
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{ 
    @{ <partial name="_ValidationScriptsPartial"/>}
}

