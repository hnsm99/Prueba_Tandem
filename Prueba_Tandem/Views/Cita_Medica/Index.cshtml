@model List<Prueba_Tandem.Models.MCita_Medica.Cita_MedicaIndex>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string items = (string)ViewBag.mensaje;
}

<div class="container">
    @if (!string.IsNullOrEmpty(items))
    {
        <div>
            <p>@items</p>
        </div>
    }
    <div class="row">
        <div class="col-sm-12">
            <h3>Lista de Citas Medicas</h3>
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <td>Paciente</td>
                            <td>Consultorio</td>
                            <td>Medico</td>
                            <td>Alta?</td>
                            <td>Prueba Virus</td>
                            <td>Contaminado</td>
                            <td>Acciones</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.StrPaciente</td>
                                <td>@item.Consultorio</td>
                                <td>@item.strMedico</td>
                                <td>
                                    @if (item.Alta == false)
                                    {<p>No</p>}
                                    else
                                    {<p>Sí</p>}
                                </td>
                                <td>
                                    @if (item.Prueba == false)
                                    {<p>No</p>}
                                    else
                                    {<p>Sí</p>}
                                </td>
                                <td>
                                    @if (item.Virus == false)
                                    {<p>No</p>}
                                    else
                                    {<p>Sí</p>}
                                </td>
                                <td>
                                    <a asp-action="Details" asp-controller="Cita_Medica" asp-route-id="@item.Id">Gestionar Cita</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No existen registros.</p>
            }
        </div>

    </div>
</div>

